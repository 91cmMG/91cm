<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace="com.nineone.nocm.mapper.user">

    <insert id="insertUser">
    	insert member (name,phone,email,picture)
    		values(#{name},#{phone},#{email},#{picture})
    </insert>
    
    <insert id="insertSNSInfo">
    	insert sns_info (identifier,member_email)
    		values(#{identifier},#{email})
    </insert>
    
<!--    <select id="getUserid" resultType="java.lang.String">-->
<!--    	select userid from member where userid = #{id}-->
<!--    </select>-->
    
    <select id="getUserfindById" parameterType="java.lang.String" resultType="com.nineone.nocm.domain.User">
        select * from member where email = (select member_email from sns_info where identifier = #{id})
    </select>
	
	<select id="getUserfindByEmail" resultType="com.nineone.nocm.domain.User">
        select * from member where email = #{email}
    </select>
	
    <select id="getAllUserList" resultType="com.nineone.nocm.domain.User">
        select * from member
    </select>
    </mapper>